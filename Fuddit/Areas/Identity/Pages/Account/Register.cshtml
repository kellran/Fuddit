@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Nickname"></label>
                <input asp-for="Input.Nickname" class="form-control" />
                <span asp-validation-for="Input.Nickname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Birthdate"></label>
                <input asp-for="Input.Birthdate" type="date" class="form-control" />
                <span asp-validation-for="Input.Birthdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Location"></label>
                <select asp-for="Input.Location" class="form-control">
                  <option value="Norway">Norway</option>
                  <option value="Not Norway">Not Norway</option>
                </select>
                <span asp-validation-for="Input.Location" class="text-danger"></span>
            </div>
            <div class="form-radio">
                <label asp-for="Input.Gender">Gender:
                    <input asp-for="Input.Gender" type="radio" class="form-radio-sm" value="Male">Male
                    <input asp-for="Input.Gender" type="radio" class="form-check-sm" value="Female">Female
                    <input asp-for="Input.Gender" type="radio" class="form-radio-sm" value="Unspecified">Unspecified
                    <span asp-validation-for="Input.Gender" class="text-danger"></span>
                </label>
            </div>
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Profilepicture" style="width: 100%;"></label>
                    <input type="file"
                           accept=".png,.jpg,.jpeg,.gif,.tif"
                           asp-for="Input.Profilepicture"
                           class="form-control"
                           style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                           onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                    <span asp-validation-for="Input.Profilepicture" class="text-danger"></span>
                </div>
            </div>
                <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}