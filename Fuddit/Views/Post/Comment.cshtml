@model Comment


<form method="post" class="general_border" id="postform">
    <div class="form-group text-white">
        <label asp-for="Message"></label>
        <input asp-for="Message" class="form-control text_box_style" placeholder="Enter post title">
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>

    <div class="form-group inside_border">
        <button type="submit" id="Submit" class="post_btn">Post</button>
    </div>

    <div>
        <a asp-action="Index">Return</a>
    </div>
</form>
